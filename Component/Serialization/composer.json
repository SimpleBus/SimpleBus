{
    "name": "simple-bus/serialization",
    "type": "library",
    "description": "Generic classes and interfaces for serializing messages",
    "keywords": [
        "messages",
        "serialization",
        "SimpleBus"
    ],
    "homepage": "http://github.com/SimpleBus/Serialization",
    "license": "MIT",
    "authors": [
        {
            "name": "Cliff Odijk",
            "email": "cliff@jcid.nl"
        },
        {
            "name": "Matthias Noback",
            "email": "matthiasnoback@gmail.com",
            "homepage": "http://php-and-symfony.matthiasnoback.nl"
        }
    ],
    "require": {
        "php": "^7.1",
        "beberlei/assert": "~2.0 || ~3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7 || ^6.0"
    },
    "autoload": {
        "psr-4": {
            "SimpleBus\\Serialization\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SimpleBus\\Serialization\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    }
}

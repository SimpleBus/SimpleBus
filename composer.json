{
    "name": "simple-bus/asynchronous-bundle",
    "type": "bundle",
    "description": "Symfony bundle for using SimpleBus/Asynchronous",
    "keywords": ["asynchronous", "message", "message bus", "event bus", "command bus"],
    "homepage": "http://github.com/SimpleBus/AsynchronousBundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Matthias Noback",
            "email": "matthiasnoback@gmail.com",
            "homepage": "http://php-and-symfony.matthiasnoback.nl"
        }
    ],
    "require": {
        "php": ">=5.4",
        "beberlei/assert": "~2.0",
        "simple-bus/message-bus": "~2.0",
        "simple-bus/asynchronous": "~2.0",
        "simple-bus/symfony-bridge": "~4.0",
        "symfony/framework-bundle": "~2.0|~3.0"
    },
    "suggest": {
        "symfony/monolog-bundle": "For logging messages"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "symfony/monolog-bundle": "~2.3",
        "satooshi/php-coveralls": "~0.6",
        "matthiasnoback/symfony-dependency-injection-test": "^0.7"
    },
    "autoload": {
        "psr-4" : { "SimpleBus\\AsynchronousBundle\\" : "src" }
    },
    "autoload-dev": {
        "psr-4" : { "SimpleBus\\AsynchronousBundle\\Tests\\" : "tests" }
    }
}

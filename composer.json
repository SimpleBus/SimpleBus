{
    "name": "simple-bus/jms-serializer-bundle-bridge",
    "type": "bundle",
    "description": "Symfony bundle for using JMSSerializer as message serializer for SimpleBus/Asynchronous",
    "keywords": ["asynchronous", "message", "serializer"],
    "homepage": "http://github.com/SimpleBus/JMSSerializerBundleBridge",
    "license": "MIT",
    "authors": [
        {
            "name": "Matthias Noback",
            "email": "matthiasnoback@gmail.com",
            "homepage": "http://php-and-symfony.matthiasnoback.nl"
        }
    ],
    "require": {
        "php": ">=5.4",
        "simple-bus/asynchronous-bundle": "~2.0",
        "simple-bus/jms-serializer-bridge": "~1.0",
        "jms/serializer-bundle": "~0.11||~1.0",
        "symfony/framework-bundle": "~2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "satooshi/php-coveralls": "~0.6"
    },
    "autoload": {
        "psr-4" : { "SimpleBus\\JMSSerializerBundleBridge\\" : "src" }
    },
    "autoload-dev": {
        "psr-4": {"SimpleBus\\JMSSerializerBundleBridge\\Tests\\": "tests"}
    }
}

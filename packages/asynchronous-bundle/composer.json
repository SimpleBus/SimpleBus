{
    "name": "simple-bus/asynchronous-bundle",
    "type": "symfony-bundle",
    "description": "Symfony bundle for using SimpleBus/Asynchronous",
    "keywords": [
        "asynchronous",
        "message",
        "message bus",
        "event bus",
        "command bus"
    ],
    "homepage": "http://github.com/SimpleBus/AsynchronousBundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Cliff Odijk",
            "email": "cliff@jcid.nl"
        },
        {
            "name": "Ruud Kamphuis",
            "homepage": "https://github.com/ruudk"
        },
        {
            "name": "Matthias Noback",
            "email": "matthiasnoback@gmail.com",
            "homepage": "http://php-and-symfony.matthiasnoback.nl"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "simple-bus/asynchronous": "^6.0",
        "simple-bus/message-bus": "^6.0",
        "simple-bus/symfony-bridge": "^6.0",
        "symfony/config": "^4.4.17 || ^5.2",
        "symfony/dependency-injection": "^4.4.17 || ^5.2",
        "symfony/framework-bundle": "^4.4 || ^5.2"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.11",
        "matthiasnoback/symfony-dependency-injection-test": "^4.1",
        "phpunit/phpunit": "^9.3",
        "symfony/monolog-bundle": "^3.4"
    },
    "suggest": {
        "symfony/monolog-bundle": "For logging messages"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "SimpleBus\\AsynchronousBundle\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SimpleBus\\AsynchronousBundle\\Tests\\": "tests"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}

{
    "name": "simple-bus/message-bus",
    "type": "library",
    "description": "Generic classes and interfaces for messages and message buses",
    "keywords": [
        "message",
        "message bus",
        "event bus",
        "command bus"
    ],
    "homepage": "http://github.com/SimpleBus/MessageBus",
    "license": "MIT",
    "authors": [
        {
            "name": "Cliff Odijk",
            "email": "cliff@jcid.nl"
        },
        {
            "name": "Ruud Kamphuis",
            "homepage": "https://github.com/ruudk"
        },
        {
            "name": "Matthias Noback",
            "email": "matthiasnoback@gmail.com",
            "homepage": "http://php-and-symfony.matthiasnoback.nl"
        }
    ],
    "require": {
        "php": "^8.0",
        "psr/log": "^1.1.4 || ^2.0 || ^3.0"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.11",
        "phpunit/phpunit": "^9.5.5",
        "symfony/phpunit-bridge": "^6.3 || ^7.0"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        }
    },
    "autoload": {
        "psr-4": {
            "SimpleBus\\Message\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SimpleBus\\Message\\Tests\\": "tests"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}

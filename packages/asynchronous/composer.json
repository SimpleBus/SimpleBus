{
    "name": "simple-bus/asynchronous",
    "type": "library",
    "description": "Generic classes and interfaces for asynchronous messaging using SimpleBus",
    "keywords": [
        "asynchronous",
        "messaging",
        "command bus",
        "event bus"
    ],
    "homepage": "http://github.com/SimpleBus/Asynchronous",
    "license": "MIT",
    "authors": [
        {
            "name": "Cliff Odijk",
            "email": "cliff@jcid.nl"
        },
        {
            "name": "Ruud Kamphuis",
            "homepage": "https://github.com/ruudk"
        },
        {
            "name": "Matthias Noback",
            "email": "matthiasnoback@gmail.com",
            "homepage": "http://php-and-symfony.matthiasnoback.nl"
        }
    ],
    "require": {
        "php": "^8.0",
        "psr/log": "^1.1.4 || ^2.0 || ^3.0",
        "simple-bus/message-bus": "^6.0",
        "simple-bus/serialization": "^6.0"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.11",
        "phpunit/phpunit": "^9.5.5",
        "symfony/phpunit-bridge": "^6.3"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        }
    },
    "autoload": {
        "psr-4": {
            "SimpleBus\\Asynchronous\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SimpleBus\\Asynchronous\\Tests\\": "tests"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}

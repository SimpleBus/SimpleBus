{
    "name": "simple-bus/jms-serializer-bundle-bridge",
    "type": "symfony-bundle",
    "description": "Symfony bundle for using JMSSerializer as message serializer for SimpleBus/Asynchronous",
    "keywords": [
        "asynchronous",
        "message",
        "serializer"
    ],
    "homepage": "http://github.com/SimpleBus/JMSSerializerBundleBridge",
    "license": "MIT",
    "authors": [
        {
            "name": "Cliff Odijk",
            "email": "cliff@jcid.nl"
        },
        {
            "name": "Ruud Kamphuis",
            "homepage": "https://github.com/ruudk"
        },
        {
            "name": "Matthias Noback",
            "email": "matthiasnoback@gmail.com",
            "homepage": "http://php-and-symfony.matthiasnoback.nl"
        }
    ],
    "require": {
        "php": "^7.3",
        "jms/serializer-bundle": "^3.0",
        "simple-bus/asynchronous-bundle": "^3.0",
        "simple-bus/jms-serializer-bridge": "^2.0",
        "symfony/framework-bundle": "^4.4 || ^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5"
    },
    "conflict": {
        "beberlei/assert": "<2.1",
        "jms/serializer": "<3.2.0"
    },
    "autoload": {
        "psr-4": {
            "SimpleBus\\JMSSerializerBundleBridge\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SimpleBus\\JMSSerializerBundleBridge\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    }
}

{
    "name": "simple-bus/jms-serializer-bundle-bridge",
    "type": "symfony-bundle",
    "description": "Symfony bundle for using JMSSerializer as message serializer for SimpleBus/Asynchronous",
    "keywords": [
        "asynchronous",
        "message",
        "serializer"
    ],
    "homepage": "http://github.com/SimpleBus/JMSSerializerBundleBridge",
    "license": "MIT",
    "authors": [
        {
            "name": "Cliff Odijk",
            "email": "cliff@jcid.nl"
        },
        {
            "name": "Ruud Kamphuis",
            "homepage": "https://github.com/ruudk"
        },
        {
            "name": "Matthias Noback",
            "email": "matthiasnoback@gmail.com",
            "homepage": "http://php-and-symfony.matthiasnoback.nl"
        }
    ],
    "require": {
        "php": "^8.0",
        "jms/serializer-bundle": "^4.0",
        "simple-bus/asynchronous-bundle": "^6.0",
        "simple-bus/jms-serializer-bridge": "^6.0",
        "symfony/config": "^5.4 || ^6.3",
        "symfony/dependency-injection": "^5.4 || ^6.3",
        "symfony/framework-bundle": "^5.4 || ^6.3"
    },
    "conflict": {
        "doctrine/annotations": "<1.10.4",
        "jms/metadata": "<2.5.2",
        "jms/serializer": "<3.2.0"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.11",
        "phpunit/phpunit": "^9.5.5",
        "symfony/phpunit-bridge": "^6.3"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        }
    },
    "autoload": {
        "psr-4": {
            "SimpleBus\\JMSSerializerBundleBridge\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SimpleBus\\JMSSerializerBundleBridge\\Tests\\": "tests"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}

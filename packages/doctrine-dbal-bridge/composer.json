{
    "name": "simple-bus/doctrine-dbal-bridge",
    "type": "library",
    "description": "Bridge for using SimpleBus with Doctrine DBAL",
    "keywords": [
        "Doctrine",
        "DBAL",
        "message bus",
        "command bus"
    ],
    "homepage": "http://github.com/SimpleBus/DoctrineDBALBridge",
    "license": "MIT",
    "authors": [
        {
            "name": "Jasper N. Brouwer",
            "email": "jasper@nerdsweide.nl"
        },
        {
            "name": "Ruud Kamphuis",
            "homepage": "https://github.com/ruudk"
        }
    ],
    "require": {
        "php": "^7.3",
        "doctrine/dbal": "^2.5",
        "simple-bus/message-bus": "^3.0.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5"
    },
    "autoload": {
        "psr-4": {
            "SimpleBus\\DoctrineDBALBridge\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SimpleBus\\DoctrineDBALBridge\\Tests\\": "tests"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    }
}
